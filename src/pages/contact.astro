---
/**
 * Contact Page
 * Trust signal for E-E-A-T - provides contact information
 */
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/pages/homepage-uk.css';
import StoreBadges from '../components/StoreBadges.astro';

const breadcrumbs = [
  { title: 'Home', href: '/' },
  { title: 'Contact', href: '/contact' }
];
---

<BaseLayout
  title="Contact Aurora Forecast UK | AuroraMe Support"
  description="Contact the AuroraMe team for aurora forecast support, feedback, or partnership enquiries. Download the app for instant aurora alerts."
  canonical="https://auroraforecast.uk/contact"
>
  <main class="home-uk">
    <section class="home-uk__intro">
      <div class="container">
        <nav class="breadcrumbs" aria-label="Breadcrumb">
          <ol>
            {breadcrumbs.map((crumb, i) => (
              <li>
                {i < breadcrumbs.length - 1 ? (
                  <a href={crumb.href}>{crumb.title}</a>
                ) : (
                  <span aria-current="page">{crumb.title}</span>
                )}
              </li>
            ))}
          </ol>
        </nav>

        <h1>Contact Us</h1>
        <p class="home-uk__subtitle">
          Have questions about aurora forecasting or need help with the app? We're here to help.
        </p>
      </div>
    </section>

    <section class="contact-section">
      <div class="container">
        <div class="contact-grid">
          <article class="contact-card">
            <h2>Contact</h2>
            <p>For technical issues, feature requests, feedback, or any enquiries:</p>
            <a href="mailto:app.aurorame@gmail.com" class="contact-link">
              app.aurorame@gmail.com
            </a>
            <p class="contact-note">We typically respond within 24-48 hours.</p>
          </article>

          <article class="contact-card">
            <h2>Address</h2>
            <address class="contact-address">
              Calle Emilio Tuya 37<br>
              33206 Gijón, Asturias<br>
              Spain
            </address>
          </article>

          <article class="contact-card">
            <h2>Aurora Questions</h2>
            <p>Have a question about aurora viewing or forecasting?</p>
            <ul class="contact-list">
              <li>Check our <a href="/#faq">FAQ section</a> for common questions</li>
              <li>Visit any <a href="/edinburgh">city page</a> for local viewing guides</li>
              <li>Download the app for real-time alerts</li>
            </ul>
          </article>
        </div>
      </div>
    </section>

    <section class="home-uk__app-cta">
      <div class="container">
        <div class="home-uk__section-heading">
          <h2>Get the App</h2>
          <p>The fastest way to get aurora alerts and forecasts for your location.</p>
        </div>
        <StoreBadges />
      </div>
    </section>

    <section class="about-section">
      <div class="container">
        <h2>About AuroraMe</h2>
        <p>
          AuroraMe provides real-time aurora borealis forecasts by combining data from
          <a href="https://www.swpc.noaa.gov" target="_blank" rel="noopener">NOAA Space Weather Prediction Center</a>
          and <a href="https://www.metoffice.gov.uk" target="_blank" rel="noopener">UK Met Office</a>
          with local conditions including cloud cover, moon phase, and sky darkness.
        </p>
        <p>
          Our location-specific Kp thresholds are calibrated from historical data to give you
          accurate visibility predictions for over 50 UK locations.
        </p>
      </div>
    </section>
  </main>
</BaseLayout>

<style>
  .breadcrumbs {
    margin-bottom: var(--aurora-spacing-l);
  }

  .breadcrumbs ol {
    display: flex;
    flex-wrap: wrap;
    gap: var(--aurora-spacing-s);
    list-style: none;
    padding: 0;
    margin: 0;
    font-size: 0.9rem;
  }

  .breadcrumbs li:not(:last-child)::after {
    content: '›';
    margin-left: var(--aurora-spacing-s);
    color: var(--aurora-text-tertiary);
  }

  .breadcrumbs a {
    color: var(--aurora-primary);
    text-decoration: none;
  }

  .breadcrumbs a:hover {
    text-decoration: underline;
  }

  .breadcrumbs span[aria-current] {
    color: var(--aurora-text-secondary);
  }

  .contact-section {
    padding: var(--aurora-spacing-xxl) 0;
  }

  .contact-grid {
    display: grid;
    gap: var(--aurora-spacing-xl);
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  .contact-card {
    background: var(--aurora-surface);
    border: 1px solid var(--aurora-border-light);
    border-radius: var(--aurora-radius-card);
    padding: var(--aurora-spacing-xl);
  }

  .contact-card h2 {
    margin-top: 0;
    margin-bottom: var(--aurora-spacing-m);
    font-size: 1.25rem;
  }

  .contact-card p {
    margin-bottom: var(--aurora-spacing-m);
  }

  .contact-link {
    display: inline-block;
    padding: var(--aurora-spacing-m) var(--aurora-spacing-l);
    background: var(--aurora-primary);
    color: var(--aurora-on-primary);
    text-decoration: none;
    border-radius: var(--aurora-radius-button);
    font-weight: 600;
    transition: transform var(--aurora-timing-fast) ease;
  }

  .contact-link:hover {
    transform: translateY(-1px);
  }

  .contact-link:focus-visible {
    outline: 2px solid var(--aurora-primary);
    outline-offset: 2px;
  }

  .contact-note {
    font-size: 0.85rem;
    color: var(--aurora-text-tertiary);
    margin-top: var(--aurora-spacing-m);
    margin-bottom: 0;
  }

  .contact-address {
    font-style: normal;
    line-height: 1.6;
    color: var(--aurora-text-primary);
  }

  .contact-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .contact-list li {
    padding: var(--aurora-spacing-s) 0;
    border-bottom: 1px solid var(--aurora-border-light);
  }

  .contact-list li:last-child {
    border-bottom: none;
  }

  .contact-list a {
    color: var(--aurora-primary);
    text-decoration: none;
  }

  .contact-list a:hover {
    text-decoration: underline;
  }

  .about-section {
    padding: var(--aurora-spacing-xxl) 0;
    background: var(--aurora-surface);
  }

  .about-section h2 {
    margin-top: 0;
  }

  .about-section a {
    color: var(--aurora-primary);
    text-decoration: none;
  }

  .about-section a:hover {
    text-decoration: underline;
  }
</style>
